<%- include('../cabecalho') %>
<div class="container">
    <h1>Autores</h1>
    <p><a href="/admin/autores/novo" id="btnIncluir" type="button" class="btn btn-primary">Novo</a></p>
    <table class="table table-striped">
        <thead>
            <th>Nome</th>
            <th>Email</th>
            <th>Admin</th>
            <th></th>
        </thead>
        <tbody id="tabela">
        <% autores.forEach(function(autor) { %>
            <tr>
                <td><%= autor.nome %></td>
                <td><%= autor.email %></td>
                <td>
                    <% if(autor.admin) { %>
                        <span class="glyphicon glyphicon-ok"></span>
                    <% } %>
                <td><a class="btn btn-info" href="/admin/autores/<%= autor._id %>"><span class="glyphicon glyphicon-pencil"></span> Editar</a></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<%- include('../rodape') %>